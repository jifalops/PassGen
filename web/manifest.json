{
  "manifest_version": 2,

  "name": "PassGen",
  "description": "A simple offline password generator",
  "version": "0.5",

  "browser_action": {
    "default_icon": "images/lock16.png",
    "default_popup": "popup.html",    
    "default_badge": "PG"
  },  
  
  "icons": {
    "128": "images/lock128.png",
    "48": "images/lock48.png",
    "16": "images/lock16.png"
  },
  
  "permissions": [
    "tabs"
  ]
}